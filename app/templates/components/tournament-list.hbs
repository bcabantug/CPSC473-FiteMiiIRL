<div class="event-listing">
  <article class="listing">
    <div class="container-image">
      <div class="detail-image">
        <a {{action 'toggleImageSize'}} class="image {{if isWide "wide"}}">
      <img src="{{tournaments.image}}" alt="">
      <small>View Larger</small>
      </a>
      </div>
      <div class="detail-link">
        {{#link-to 'tournamentpage.tournamentpage' tournaments.id}}Tourney Page{{/link-to}}
      </div>
    </div>
    <div class="container-event">
      <div class="detail-title">
        <h3>{{tournaments.title}}</h3>
      </div>
      <div class="detail-event">
        <div class="detail-owner">
          <span>Event Organizer: {{tournaments.organizer}}</span>
        </div>
        <div class="detail-category">
          <span>Type: {{tournaments.category}}</span>
        </div>
        <div class="detail-city">
          <span>Location: {{tournaments.city}}</span>
        </div>
        <div class="detail-count">
          <span>Number of attendee: {{tournaments.attendee}}</span>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'buttonClickedv2' tournaments}}>{{buttonLabeled}}</button>
      </div>
    </div>


    <div class="detail-map">
    {{location-map location=tournaments.city}}
  </div>

  </article>
</div>
