{{#if session.isAuthenticated}}
  Logged in as {{session.currentUser.email}}
  <button {{action "signOut"}}>Sign out</button> {{outlet}}
{{else}}

  <div class="jumbotron col-xs-7 col-xs-offset-3">
    <div class="right tomster"></div>
    <h1>{{headerMessage}}</h1>

    <br/><br/>
    <div class="form-horizontal form-group form-group-lg row">
      <div class="col-xs-10 col-xs-offset-1">
        <label for="inputEmail" class="col-form-label">Email</label> {{input type="email" value=emailAddress class="form-control" placeholder="example@email.com" autofocus="autofocus"}}
      </div>
    </div>
    <div class="form-horizontal form-group form-group-lg row">
      <div class="col-xs-10 col-xs-offset-1">
        <label for="inputPassword" class="col-form-label">Password</label> {{input type="password" value=password class="form-control" placeholder="password must have at least 6 characters"}}
      </div>
    </div>
    <div class="form-horizontal form-group form-group-lg row">
      <div class="col-xs-10 col-xs-offset-1">
        <button class="btn btn-primary btn-lg btn-block" {{action 'signIn'}} disabled= {{isDisabled}}>Sign in</button>
      </div>
    </div>
    <hr class="hr-text" data-content="New to FiteMiiIRL?">
    <div class="form-horizontal form-group form-group-lg row">
      <div class="col-xs-10 col-xs-offset-1">
        {{#link-to 'register' class="btn btn-primary btn-lg btn-block" }}Create your new account{{/link-to}}
      </div>
    </div>

    {{#if responseError}}
      <div class="alert alert-danger">{{responseError}}</div>
    {{/if}}
  </div>
{{/if}}
