<h2>Add a new local event</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="The name of the Event"}}
    </div>
  </div>
  <!-- <div class="form-group">
    <label class="col-sm-2 control-label">organizer</label>
    <div class="col-sm-10">
      {{input type="text" value=model.organizer class="form-control" placeholder="The name of the event organizer"}}
    </div>
  </div> -->
  <div class="form-group">
    <label class="col-sm-2 control-label">city</label>
    <div class="col-sm-10">
      {{input type="text" value=model.city class="form-control" placeholder="The name of city"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">category</label>
    <div class="col-sm-10">
      {{input type="text" value=model.category class="form-control" placeholder="The name of category"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">attendee</label>
    <div class="col-sm-10">
      {{input type="number" min=0 value=model.attendee class="form-control" placeholder="The number of attendee"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">image</label>
    <div class="col-sm-10">
      {{input type="text" min=0 value=model.image class="form-control" placeholder="The link for image"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">description</label>
    <div class="col-sm-10">
      {{input type="text" min=0 value=model.description class="form-control" placeholder="The description of the Event"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveTournament' model}}>Add to Event list</button>
    </div>
  </div>
</div>
